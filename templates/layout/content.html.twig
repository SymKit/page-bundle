{% extends base_layout %}

{% block page_header '' %}

{% block main_container %}
<div class="flex-1 flex min-h-full">
    {# Sidebar Left #}
    <div
        class="hidden lg:fixed lg:inset-y-0 lg:left-0 lg:z-30 lg:flex lg:w-64 lg:flex-col bg-gray-50 dark:bg-gray-900 border-r border-gray-200 dark:border-gray-800 pt-24 pb-4 overflow-y-auto">
        <nav class="px-6 space-y-8 text-sm">
            {% block sidebar_left '' %}
        </nav>
    </div>

    <div class="flex-1 lg:pl-64 flex flex-col min-h-0 bg-white dark:bg-gray-900">
        <div class="flex-1 flex flex-col">
            <div class="flex-1 max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-10 lg:py-12">

                <div class="lg:flex lg:gap-x-12">
                    <article class="flex-auto min-w-0" data-table-of-contents-target="content">
                        <header class="mb-16">
                            <div class="space-y-4">
                                {% if page.category %}
                                <div
                                    class="text-sm font-semibold text-sky-600 dark:text-sky-400 uppercase tracking-wider">
                                    {% block content_label %}{{ page.category.name }}{% endblock %}
                                </div>
                                {% endif %}
                                <h1
                                    class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl font-display">
                                    {% block content_title %}{{ page.title }}{% endblock %}
                                </h1>

                                <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed">
                                    {% block content_lead %}{{ page.excerpt }}{% endblock %}
                                </p>
                            </div>
                        </header>

                        <div
                            class="prose prose-lg prose-indigo dark:prose-invert max-w-none prose-pre:my-0 prose-table:my-0">
                            {% block content_body '' %}
                        </div>
                    </article>

                    <aside class="hidden xl:block xl:w-64 xl:flex-none" data-table-of-contents-target="container">
                        <div class="sticky top-28 space-y-8">
                            {% block sidebar_right '' %}
                        </div>
                    </aside>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}
{% extends base_layout %}

{% block page_header '' %}

{% block main_container %}
<div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8" data-table-of-contents-target="content">
    <div class="space-y-8">
        <header class="space-y-6">
            {% if page.category %}
            <div class="text-center text-sm font-semibold text-sky-600 dark:text-sky-400 uppercase tracking-wider">
                {% block content_label %}{{ page.category.name }}{% endblock %}
            </div>
            {% endif %}
            <h1
                class="text-center text-5xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl font-display">
                {% block content_title %}{{ page.title }}{% endblock %}
            </h1>
            <p class="text-center max-w-2xl mx-auto text-lg text-gray-500 dark:text-gray-400 leading-relaxed">
                {% block content_lead %}{{ page.excerpt }}{% endblock %}
            </p>
        </header>

        <div class="prose prose-lg prose-indigo dark:prose-invert max-w-none prose-pre:my-0 prose-table:my-0">
            {% block content_body '' %}
        </div>
    </div>
</div>
{% endblock %}
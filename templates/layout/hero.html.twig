{% extends base_layout %}
{% trans_default_domain 'SymkitPageBundle' %}

{% block page_header %}
{# Hero Section with Stimulus Controller #}
<div class="relative isolate overflow-hidden bg-gray-900 px-6 py-24 sm:py-32 lg:px-8" data-controller="hero">

    {# Premium Background Treatment #}
    {% if page.ogImage %}
    <img src="{{ page.ogImage|media_url }}" class="absolute inset-0 -z-10 h-full w-full object-cover" loading="eager"
        alt="{{ page.title }}" data-hero-target="image">
    {# Multiple overlay layers for depth #}
    <div class="absolute inset-0 -z-10 bg-gradient-to-b from-gray-900/40 via-gray-900/60 to-gray-900"></div>
    <div class="absolute inset-0 -z-10 bg-gray-900/20 backdrop-brightness-75"></div>
    {% else %}
    <div class="absolute inset-0 -z-10 h-full w-full bg-gradient-to-br from-indigo-900 via-slate-900 to-black"></div>
    {% endif %}

    {# Modern Decorative Accents (Animated Glows/Blobs) #}
    <div class="absolute -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80 pointer-events-none"
        aria-hidden="true">
        <div data-hero-target="accent"
            class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-indigo-500 to-purple-600 opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
            style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
        </div>
    </div>

    {# Main Hero Content #}
    <div class="mx-auto max-w-4xl text-center relative z-10">
        {% if page.category %}
        <div class="mb-10 flex justify-center opacity-0 translate-y-8 transition-all duration-1000"
            data-hero-target="label">
            <div
                class="relative rounded-full px-4 py-1.5 text-xs font-bold leading-6 text-indigo-400 ring-1 ring-white/10 hover:ring-white/20 transition-all uppercase tracking-[0.2em] bg-white/5 backdrop-blur-md">
                {% block content_label %}{{ page.category.name|default('layout.hero.featured'|trans) }}{% endblock %}
            </div>
        </div>
        {% endif %}

        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-7xl font-display drop-shadow-2xl opacity-0 translate-y-8 transition-all duration-1000"
            data-hero-target="title">
            {% block content_title %}{{ page.title }}{% endblock %}
        </h1>

        <p class="mt-8 text-xl leading-relaxed text-gray-300 max-w-2xl mx-auto font-light lg:text-2xl opacity-0 translate-y-8 transition-all duration-1000"
            data-hero-target="lead">
            {% block content_lead %}{{ page.excerpt }}{% endblock %}
        </p>
    </div>

    {# Bottom decorative edge transition #}
    <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)] pointer-events-none"
        aria-hidden="true">
        <div data-hero-target="accent"
            class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-indigo-600 to-purple-800 opacity-10 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]"
            style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
        </div>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="relative bg-white dark:bg-gray-900 pb-24" data-table-of-contents-target="content">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
        <div class="pt-16 prose prose-lg prose-indigo dark:prose-invert max-w-none prose-pre:my-0 prose-table:my-0">
            {% block content_body '' %}
        </div>
    </div>
</div>
{% endblock %}
{
    "name": "symkit/page-bundle",
    "description": "Page Bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.0 || ^8.0"
    },
    "suggest": {
        "symkit/search-bundle": "Global search (admin)",
        "symkit/sitemap-bundle": "XML sitemap for pages",
        "symkit/form-bundle": "SlugType, FormSectionType",
        "symkit/metadata-bundle": "SEO, JSON-LD, breadcrumbs",
        "symkit/crud-bundle": "Admin CRUD",
        "symkit/menu-bundle": "Menus and active item",
        "symkit/faq-bundle": "FAQ blocks on pages",
        "symkit/routing-bundle": "Database-driven routes for pages",
        "symkit/media-bundle": "OG images and media picker"
    },
    "require-dev": {
        "deptrac/deptrac": "^2.0",
        "doctrine/doctrine-bundle": "^2.11 || ^3.0",
        "friendsofphp/php-cs-fixer": "^3.64",
        "infection/infection": "^0.29",
        "phpro/grumphp": "^2.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.5 || ^11.0",
        "symkit/bundle-ai-kit": "~0.0.1",
        "doctrine/orm": "^3.0",
        "symfony/translation": "^7.0 || ^8.0",
        "symfony/validator": "^7.0 || ^8.0",
        "twig/twig": "^3.0 || ^4.0",
        "symfony/form": "^7.0 || ^8.0",
        "phpstan/phpstan-doctrine": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpro/grumphp": true,
            "symkit/bundle-ai-kit": true
        }
    },
    "extra": {
        "bundle-ai-kit": {
            "editors": ["cursor"],
            "skills": [
                "symfony-bundle-core",
                "symfony-bundle-ux",
                "symfony-bundle-doctrine",
                "symfony-bundle-flex",
                "symfony-bundle-quality"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Symkit\\PageBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symkit\\PageBundle\\Tests\\": "tests/"
        }
    }
}
